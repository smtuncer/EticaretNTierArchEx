@model IEnumerable<Blog>

<main class="main">
    <div class="page-header breadcrumb-wrap">
        <div class="container">
            <div class="breadcrumb">
                <a asp-controller="Home" asp-action="Index" rel="nofollow"><i class="fi-rs-home mr-5"></i>Anasayfa</a>
                <span></span> Blog
            </div>
        </div>
    </div>
    <div class="page-content mb-50  mt-30">
        <div class="container">
            <div class="row">
                <div class="col-lg-9">
                    <div class="shop-product-fillter mb-50 pr-30">
                        <div class="totall-product">
                            <h2>
                                <img class="w-36px mr-10" src="~/nest_v5.8_unzip-first/nest_v5.8_unzip-first/nest-frontend/assets/imgs/theme/icons/category-1.svg" alt="Blog" />
                                Blog
                            </h2>
                        </div>
                    </div>
                    <div class="loop-grid loop-list pr-30 mb-50">
                        @foreach (var item in Model)
                        {
                            <article class="wow fadeIn animated hover-up mb-30 animated">
                                <div class="post-thumb" style="background-image: url(@item.Image)">
                                    <div class="entry-meta">
                                        <a class="entry-meta meta-2" asp-action="BlogDetail" asp-route-id="@item.Id"><i class="fi-rs-play-alt"></i></a>
                                    </div>
                                </div>
                                <div class="entry-content-2 pl-50">
                                    <h3 class="post-title mb-20">
                                        <a asp-action="BlogDetail" asp-route-id="@item.Id">@item.Title</a>
                                    </h3>
                                    <p class="post-exerpt mb-40">
                                        @if (item.BlogText != null)
                                        {
                                            @if (item.BlogText.Length > 330)
                                            {
                                                @item.BlogText.Substring(0, 330)
                                                <span>...</span>
                                            }
                                            else
                                            {
                                                @item.BlogText
                                            }
                                        }
                                    </p>
                                    <div class="entry-meta meta-1 font-xs color-grey mt-10 pb-10">
                                        <div>
                                            <span class="post-on">@item.CreateDate?.ToString("d")</span>
                                        </div>
                                        <a asp-action="BlogDetail" asp-route-id="@item.Id" class="text-brand font-heading font-weight-bold">Devamını Oku <i class="fi-rs-arrow-right"></i></a>
                                    </div>
                                </div>
                            </article>
                        }
                    </div>
                </div>
                <div class="col-lg-3 primary-sidebar sticky-sidebar">
                    <div class="widget-area">
                        <div class="sidebar-widget-2 widget_search mb-50">
                            <div class="search-form">
                                <form asp-action="SearchBlog">
                                    <input type="text" name="q" placeholder="Blog Ara…" />
                                    <button type="submit"><i class="fi-rs-search"></i></button>
                                </form>
                            </div>
                        </div>
                        <div class="sidebar-widget widget-category-2 mb-50">
                            <h5 class="section-title style-1 mb-30">Son Eklenen Bloglar</h5>
                            <ul>
                                @await Component.InvokeAsync("LastBlogVC")
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>