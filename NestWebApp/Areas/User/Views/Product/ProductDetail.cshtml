@model ShoppingCart
<form method="post">
    <input type="hidden" asp-for="ProductId"  />
    <main class="main">
        <div class="page-header breadcrumb-wrap">
            <div class="container">
                <div class="breadcrumb">
                    <a asp-controller="Home" asp-action="Index" rel="nofollow"><i class="fi-rs-home mr-5"></i>Anasayfa</a>
                    <span></span> <a asp-action="CategoryDetail" asp-route-id="@Model?.Product?.Id">@Model?.Product?.ProductCategory?.Title</a> <span></span> @Model?.Product?.Title
                </div>
            </div>
        </div>
        <div class="container mb-30">
            <div class="row">
                <div class="col-xl-11 col-lg-12 m-auto">
                    <div class="row">
                        <div class="col-xl-9">
                            <div class="product-detail accordion-detail">
                                <div class="row mb-50 mt-30">
                                    <div class="col-md-6 col-sm-12 col-xs-12 mb-md-0 mb-sm-5">
                                        <div class="detail-gallery">
                                            <span class="zoom-icon"><i class="fi-rs-search"></i></span>
                                            <div class="product-image-slider">
                                                <figure class="border-radius-10">
                                                    <img src="@Model?.Product?.Image" alt="@Model?.Product?.Title" />
                                                </figure>
                                            </div>
                                            <div class="slider-nav-thumbnails">
                                                <div><img src="@Model?.Product?.Image" alt="@Model?.Product?.Title" /></div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-12 col-xs-12">
                                        <div class="detail-info pr-30 pl-30">
                                            @if (Model?.Product?.IsCampaing == true)
                                            {
                                                <span class="hot">İndirim</span>
                                            }
                                            <h2 class="title-detail">@Model?.Product?.Title</h2>
                                            <div class="short-desc mb-30">
                                                <p class="font-lg">
                                                    @Model?.Product?.Description
                                                </p>
                                            </div>
                                            <div class="attr-detail attr-size mb-30">
                                                <strong class="mr-10">Gramaj: </strong>
                                                <ul class="list-filter size-filter font-small">
                                                    <li><a href="#">@Model?.Product?.Grammage</a></li>
                                                </ul>
                                            </div>
                                            <div class="attr-detail attr-size mb-30">
                                                <strong class="mr-10">Koli Başı Adet: </strong>
                                                <ul class="list-filter size-filter font-small">
                                                    <li><a href="#">@Model?.Product?.PiecesInBox</a></li>
                                                </ul>
                                            </div>
                                            <div class="detail-extralink mb-50">
                                               @*  <div class="detail-qty border radius">
                                                    <a href="#" class="qty-down"><i class="fi-rs-angle-small-down"></i></a>
                                                    <input asp-for="Count" class="qty-val" min="1">
                                                    <a href="#" class="qty-up"><i class="fi-rs-angle-small-up"></i></a>
                                                </div> *@
                                                <div class="product-extra-link2">
                                                    <button type="submit" class="button button-add-to-cart"><i class="fi-rs-shopping-cart"></i>Sepete Ekle</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-60">
                                    <div class="col-12">
                                        <h2 class="section-title style-1 mb-30">Öne Çıkarılan Ürünler</h2>
                                    </div>
                                    <div class="col-12">
                                        <div class="row related-products">
                                            @await Component.InvokeAsync("FeaturedProductsVC")
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 primary-sidebar sticky-sidebar mt-30">
                            <div class="sidebar-widget widget-category-2 mb-30">
                                <h5 class="section-title style-1 mb-30">Kategoriler</h5>
                                <ul>
                                    @await Component.InvokeAsync("CategoriesForProductsPageVC")
                                </ul>
                            </div>
                            <div class="sidebar-widget product-sidebar mb-30 p-30 bg-grey border-radius-10">
                                <h5 class="section-title style-1 mb-30">Yeni Ürünler</h5>
                                @await Component.InvokeAsync("NewProductVC")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

</form>