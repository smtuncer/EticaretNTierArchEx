@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Mudo | Enjoy The Shopping</title>
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta property="og:title" content="" />
    <meta property="og:type" content="" />
    <meta property="og:url" content="" />
    <meta property="og:image" content="" />
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="~/image0.jpeg" />
    <!-- Template CSS -->
    <link href="~/nest_v5.8_unzip-first/nest_v5.8_unzip-first/nest-backend/assets/css/main.css?v=1.1" rel="stylesheet" type="text/css" />
</head>

<body>
    <div class="screen-overlay"></div>
    <aside class="navbar-aside" id="offcanvas_aside">
        <div class="aside-top">
            <a asp-controller="Dashboard" asp-action="Index" class="brand-wrap">
                <img src="~/image0.jpeg" class="logo" alt="Dashboard"/>
            </a>
            <div>
                <button class="btn btn-icon btn-aside-minimize"><i class="text-muted material-icons md-menu_open"></i></button>
            </div>
        </div>
        <nav>
            <ul class="menu-aside">
                <li class="menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString()=="Dashboard"?"active":"")">
                    <a class="menu-link" asp-controller="Dashboard" asp-action="Index">
                        <i class="icon material-icons md-home"></i>
                        <span class="text">Dashboard</span>
                    </a>
                </li>
                <li class="menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString()=="User"?"active":"")">
                    <a class="menu-link" asp-controller="User" asp-action="UserList">
                        <i class="icon material-icons md-person"></i>
                        <span class="text">Kullanıcılar</span>
                    </a>
                </li>
                <li class="menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString()=="Order"?"active":"")">
                    <a class="menu-link" asp-controller="Order" asp-action="OrderList">
                        <i class="icon material-icons md-monetization_on"></i>
                        <span class="text">Fiyat Teklifleri</span>
                    </a>
                </li>
                <li class="menu-item has-submenu @(ViewContext.RouteData.Values["Controller"]?.ToString()=="Product"?"active":"")">
                    <a class="menu-link" href="#">
                        <i class="icon material-icons md-shopping_bag"></i>
                        <span class="text">Ürün İşlemleri</span>
                    </a>
                    <div class="submenu">
                        <a asp-controller="Product" asp-action="CategoriesList" class="@(ViewContext.RouteData.Values["Action"]?.ToString()=="CategoriesList"?"active":"")">
                            Kategori Listesi
                        </a>
                        <a asp-controller="Product" asp-action="ProductList" class="@(ViewContext.RouteData.Values["Action"]?.ToString()=="ProductList"?"active":"")">
                            Ürün Listesi
                        </a>
                    </div>
                </li>
                <li class="menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Blog" ? "active" : "")">
                    <a class="menu-link" asp-controller="Blog" asp-action="BlogList">
                        <i class="icon material-icons md-pie_chart"></i>
                        <span class="text">Blog</span>
                    </a>
                </li>
                <li class="menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Brand" ? "active" : "")">
                    <a class="menu-link" asp-controller="Brand" asp-action="Index">
                        <i class="icon material-icons md-stars"></i>
                        <span class="text">Markalarımız</span>
                    </a>
                </li> 
            </ul>
            <hr />
            <ul class="menu-aside">
                <li class="menu-item has-submenu @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Slider" ? "active" : ViewContext.RouteData.Values["Controller"]?.ToString() == "SocialMedia" ? "active" : ViewContext.RouteData.Values["Controller"]?.ToString() == "AboutUs" ? "active" : ViewContext.RouteData.Values["Controller"]?.ToString() == "Contact" ? "active" : "")">
                    <a class="menu-link" href="#">
                        <i class="icon material-icons md-settings"></i>
                        <span class="text">Ayarlar</span>
                    </a>
                    <div class="submenu">
                        <a asp-controller="Slider" asp-action="SliderList" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Slider" ? "active" : "")">Slider</a>
                        <a asp-controller="AboutUs" asp-action="Edit" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "AboutUs" ? "active" : "")">Hakkımızda</a>
                        <a asp-controller="Contact" asp-action="Edit" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Contact" ? "active" : "")">İletişim Bilgileri</a>
                        <a asp-controller="SocialMedia" asp-action="SocialMediaList" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "SocialMedia" ? "active" : "")">Sosyal Medya</a>
                        <a asp-controller="Email" asp-action="Edit" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Email" ? "active" : "")">Email</a>
                    </div>
                </li>
                <li class="menu-item">
                    <a class="menu-link" asp-area="User" asp-controller="Home" asp-action="Index">
                        <span class="text"> Siteyi Görüntüle </span>
                    </a>
                </li>
            </ul>
            <br />
            <br />
        </nav>
    </aside>
    <main class="main-wrap">
        <section class="content-main">
            @RenderBody()
        </section>
       @*  <footer class="main-footer font-xs">
            <div class="row pb-30 pt-15">
                <div class="col-sm-6">
                    <div class="text-sm-end">Tüm Hakları Saklıdır.</div>
                </div>
            </div>
        </footer> *@
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="~/nest_v5.8_unzip-first/nest_v5.8_unzip-first/nest-backend/assets/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="~/nest_v5.8_unzip-first/nest_v5.8_unzip-first/nest-backend/assets/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="~/nest_v5.8_unzip-first/nest_v5.8_unzip-first/nest-backend/assets/js/vendors/select2.min.js"></script>
    <script src="~/nest_v5.8_unzip-first/nest_v5.8_unzip-first/nest-backend/assets/js/vendors/perfect-scrollbar.js"></script>
    <script src="~/nest_v5.8_unzip-first/nest_v5.8_unzip-first/nest-backend/assets/js/vendors/jquery.fullscreen.min.js"></script>
    <script src="~/nest_v5.8_unzip-first/nest_v5.8_unzip-first/nest-backend/assets/js/vendors/chart.js"></script>
    <!-- Main Script -->
    <script src="~/nest_v5.8_unzip-first/nest_v5.8_unzip-first/nest-backend/assets/js/main.js?v=1.1" type="text/javascript"></script>
    <script src="~/nest_v5.8_unzip-first/nest_v5.8_unzip-first/nest-backend/assets/js/custom-chart.js" type="text/javascript"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 