@model ProductCategory

<div class="content-header">
    <div>
        <h2 class="content-title card-title">Kategori Bilgilerini Güncelle</h2>
    </div>
    <div>
        <a asp-action="CategoriesList" class="btn btn-primary btn-sm rounded">Kategori Listesi</a>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <form method="post">
            <input type="hidden" asp-for="Id" />
            <div class="mb-4">
                <label class="form-label">Kategori Adı</label>
                <input type="text" asp-for="Title" placeholder="Kategori Adı" class="form-control" required />
            </div>
            <div class="mb-4">
                <button class="btn btn-primary">Kategori Bilgilerini Güncelle</button>
            </div>
        </form>
    </div>
</div>