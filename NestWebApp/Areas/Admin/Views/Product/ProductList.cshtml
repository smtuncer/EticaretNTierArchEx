@model IEnumerable<Product>

<div class="content-header">
    <div>
        <h2 class="content-title card-title">Ürün Listesi</h2>
    </div>
    <div>
        <a asp-action="AddProduct" class="btn btn-primary btn-sm rounded">Yeni Ürün Ekle</a>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Resim</th>
                                <th>Ürün Adı</th>
                                <th>Açıklama</th>
                                <th>Gramaj</th>
                                <th>Kutu İçi Miktar</th>
                                <th>Öne Çıkarılsın mı?</th>
                                <th>Kampanyalı mı?</th>
                                <th class="text-end">İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            { 
                                <tr>
                                    <td>
                                        <div class="left">
                                            <img src="@item.Image" class="img-sm img-avatar" alt="Userpic" />
                                        </div>
                                    </td>
                                    <td>@item.Title</td>
                                    <td>
                                        @if (item.Description!=null)
                                        {
                                            @if (item.Description.Length > 60)
                                            {
                                                @item.Description.Substring(0, 60)
                                                <span>...</span>
                                            }
                                            else
                                            {
                                                @item.Description
                                            }
                                        }
                                    </td>
                                    <td>@item.Grammage</td>
                                    <td>@item.PiecesInBox</td>
                                    <td>
                                        @if (item.IsFeatured)
                                        {
                                            <span class="badge rounded-pill alert-success">Evet</span>
                                        }
                                        else
                                        {
                                            <span class="badge rounded-pill alert-danger">Hayır</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.IsCampaing)
                                        {
                                            <span class="badge rounded-pill alert-success">Evet</span>
                                        }
                                        else
                                        {
                                            <span class="badge rounded-pill alert-danger">Hayır</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <a asp-action="EditProduct" asp-route-id="@item.Id" class="btn btn-sm font-sm rounded btn-brand"> <i class="material-icons md-edit"></i> Güncelle </a>
                                        <a asp-action="DeleteProduct" asp-route-id="@item.Id" class="btn btn-sm font-sm btn-light rounded"> <i class="material-icons md-delete_forever"></i> Sil </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>