@model Product

<div class="content-header">
    <div>
        <h2 class="content-title card-title">Ürün Bilgilerini Güncelle</h2>
    </div>
    <div>
        <a asp-action="ProductList" class="btn btn-primary btn-sm rounded">Ürün Listesi</a>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <form method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Image" />
            <div class="mb-4">
                <label class="form-label">Ürün Kategorisi</label>
                <select asp-for="ProductCategoryId" class="form-select" required>
                    <option value="">Seçiniz</option>
                    @foreach (var item in ViewBag.ProductCategoryList)
                    {
                        <option value="@item.Id">@item.Title</option>
                    }
                </select>
            </div>
            <div class="mb-4">
                <label class="form-label">Ürün Adı</label>
                <input type="text" asp-for="Title" placeholder="Ürün Adı" class="form-control" required />
            </div>
            <div class="mb-4">
                <label class="form-label">Ürün Açıklaması</label>
                <textarea asp-for="Description" placeholder="Ürün Açıklaması" class="form-control" rows="4" required></textarea>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="mb-4">
                        <label class="form-label">Gramaj</label>
                        <div class="row gx-2">
                            <input placeholder="Gramaj" asp-for="Grammage" type="text" class="form-control" required />
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="mb-4">
                        <label class="form-label">Kutu İçi Miktar</label>
                        <input placeholder="Kutu İçi Miktar" asp-for="PiecesInBox" type="text" class="form-control" required />
                    </div>
                </div>
            </div>
            <div class="mb-4">
                <label class="form-label">Resim</label>
                <br />
                <img src="@Model?.Image" style="height:100px;width:auto;" alt="" />
                <input class="form-control" type="file" asp-for="Image"  />
            </div>
            <label class="form-check mb-4">
                <input class="form-check-input" type="checkbox" asp-for="IsFeatured"/>
                <span class="form-check-label"> Öne Çıkarılsın Mı? </span>
            </label>
            <label class="form-check mb-4">
                <input class="form-check-input" type="checkbox" asp-for="IsCampaing"/>
                <span class="form-check-label"> Kampanyalı Mı? </span>
            </label>
            <div class="mb-4">
                <button class="btn btn-primary">Ürün Bilgilerini Güncelle</button>
            </div>
        </form>
    </div>
</div>