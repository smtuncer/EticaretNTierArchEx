@model IEnumerable<Blog>

<div class="content-header">
    <div>
        <h2 class="content-title card-title">Blog Listesi</h2>
    </div>
    <div>
        <a asp-action="AddBlog" class="btn btn-primary btn-sm rounded">Yeni Blog Ekle</a>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Resim</th>
                                <th>Başlık</th>
                                <th>Blog İçeriği</th> 
                                <th class="text-end">İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            { 
                                <tr>
                                    <td>
                                        <div class="left">
                                            <img src="@item.Image" class="img-sm img-avatar" alt="Userpic" />
                                        </div>
                                    </td>
                                    <td>@item.Title</td>
                                    <td>
                                        @if (item.BlogText!=null)
                                        {
                                            @if (item.BlogText.Length > 60)
                                            {
                                                @item.BlogText.Substring(0, 60)
                                                <span>...</span>
                                            }
                                            else
                                            {
                                                @item.BlogText
                                            }
                                        }
                                    </td> 
                                    <td class="text-end">
                                        <a asp-action="EditBlog" asp-route-id="@item.Id" class="btn btn-sm font-sm rounded btn-brand"> <i class="material-icons md-edit"></i> Güncelle </a>
                                        <a asp-action="DeleteBlog" asp-route-id="@item.Id" class="btn btn-sm font-sm btn-light rounded"> <i class="material-icons md-delete_forever"></i> Sil </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>