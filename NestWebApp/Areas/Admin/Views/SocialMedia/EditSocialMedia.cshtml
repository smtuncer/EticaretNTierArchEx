@model SocialMedia

<div class="content-header">
    <div>
        <h2 class="content-title card-title">Sosyal Medya Bilgilerini Güncelle</h2>
    </div>
    <div>
        <a asp-action="SocialMediaList" class="btn btn-primary btn-sm rounded">Sosyal Medya Listesi</a>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <form method="post">
            <input type="hidden" asp-for="Id" />
            <div class="mb-4">
                <label class="form-label">Kategori Adı</label>
                <input type="text" asp-for="SocialMediaName" placeholder="Sosyal Medya Adı" class="form-control" required />
            </div>
            <div class="mb-4">
                <label class="form-label">Link</label>
                <input type="text" asp-for="Link" placeholder="Link" class="form-control" required />
            </div>
            <div class="mb-4">
                <button class="btn btn-primary">Sosyal Medya Bilgilerini Güncelle</button>
            </div>
        </form>
    </div>
</div>